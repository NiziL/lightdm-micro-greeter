pkgname=lightdm-micro-greeter
pkgver=0.4.0
pkgrel=1
pkgdesc='Minimalist LightDM greeter'
arch=('x86_64')
url="https://github.com/nizil/$pkgname"
license=('MIT')
depends=('lightdm')
makedepends=('go', 'lightdm')
source=("$url/$pkgname-$pkgver.tar.gz") # change this to pinpoint the release archive
sha256sums=('1337deadbeef') # change this according to the .tar.gz sha256

# useless ?
#prepare(){
#  cd "$pkgname-$pkgver"
#}

build() {
  cd "$pkgname-$pkgver"
  export CGO_CPPFLAGS="${CPPFLAGS}"
  export CGO_CFLAGS="${CFLAGS}"
  export CGO_CXXFLAGS="${CXXFLAGS}"
  export CGO_LDFLAGS="${LDFLAGS}"
  export GOFLAGS="-buildmode=pie -trimpath -ldflags=-linkmode=external -mod=readonly -modcacherw"
  go build
}

package() {
  cd "$pkgname-$pkgver"
  install -Dm755 $pkgname "$pkgdir"/usr/bin/$pkgname
}